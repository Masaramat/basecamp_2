<div class = "container">
    <div class = "card">
        <div class = "card-header">
            <h4>Manage users</h4>
        </div>
        <div class = "card-body">
            <table class = "table">
                <thead>
                <tr>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Role</th>
                    <th>Action</th>
                </tr>
                    
                </thead>
                <tbody>
                    <% @users.each do |user| %>
                    <tr>

                        <td><%= link_to "#{user.firstname} #{user.lastname}",  admin_user_path(user), class: "nav-link text-primary" %></td>       
                        <td><%= user.email %></td>
                        <td><%= user.role %></td>
                        <td><%= link_to "Edit", edit_admin_user_path(user), class: "nav-link text-primary" %></td>
                    </tr>
                    <% end %>
                </tbody>
            </table>

            <%= link_to "Add new user", new_admin_user_path, class: "btn btn-secondary" %>

        </div>

    </div>
        

</div>


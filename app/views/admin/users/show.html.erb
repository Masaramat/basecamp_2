<div class = "card">
    <div class = "card-header">
        <h3><%= "#{@user.firstname} #{@user.lastname}" %></h3>
    </div>
    <div class = "card-body">
        <ul>
            <li><%= "Email: #{@user.email}" %></li>
            <li><%= "Role: #{@user.role}" %></li>

        </ul>
    </div>
    <div class = "card-footer">
        <%= link_to "Manage users", admin_users_path, class: "btn btn-secondary" %>
        <%= link_to "Delete user", admin_user_path(@user), data: { confirm: "Are you sure you want to delete this user?", turbo_method: :delete }, class: 'btn btn-danger' %>
        
    </div>
</div>
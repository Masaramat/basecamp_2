Hello world!
you are <%= current_user.role %>

<% if current_user.admin? %>
    <table>
        <thead>
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Action</th>
        </tr>
            
        </thead>
        <tbody>
            <% User.all.each do |user| %>
            <tr>

                <td><%= link_to "#{user.firstname} #{user.lastname}",  edit_user_registration_path %></td>       
                <td><%= link_to user.email %></td>
                <td><%= link_to "Delete" %></td>
            </tr>
            <% end %>
        </tbody>
    </table>

    
<% end %>



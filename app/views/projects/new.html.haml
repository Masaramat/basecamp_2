

= simple_form_for @project do |f|
    %div.card
        %div.card-header
            %h4 New project
        %div.card-body
            %div.field.form-group.py-2
                = f.input :name, input_html: {class: 'form-control'}
                = f.button :submit, class: "btn btn-secondary mt-3"

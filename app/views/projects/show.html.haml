%div.container.d-flex.justify-content-center
    %div.col-8
        %div.card
            %div.card-header
                %h3 Project view
            %div.card-body
                %p.muted Project name:
                %h5= @project.name
                %p.muted Creator:
                %h5 
                    - full_names = @project.users.pluck(:firstname, :lastname).map { |first, last| "#{first} #{last}" }
                    = full_names.join(", ")
                %p.muted Created at:
                %h6= @project.created_at
                %p.muted Last update:
                %h6= @project.updated_at

                = link_to "Delete project", project_path(@project), data: { confirm: "Are you sure you want to delete this project?", turbo_method: :delete }, class: 'btn btn-danger mt-3'
                = link_to "Back to all projects", projects_path, class: "btn btn-secondary mt-3" 
                

                

